import glob, os

for base, dirs, files in os.walk("aps/aps_get/json"):
    break

lengths = []
for folder in folders:
    myfiles = glob.glob("/aps/aps_get/json/%s/*.json" % folder)
    c = len(myfiles)
    lengths.append([folder, c])

with open("counts.csv", "a") as f:
    for l in lengths:
        f.write("".join([l[0], ",", l[1], "\n"))
f.close()        